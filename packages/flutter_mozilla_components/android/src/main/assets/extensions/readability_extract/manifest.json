{
  "manifest_version": 2,
  "browser_specific_settings": {
    "gecko": {
      "id": "readability-extract@movenext.me"
    }
  },
  "name": "Extract text of Websites",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "readability.min.js",
        "content.js"
      ]
    }
  ],
  "permissions": [
    "mozillaAddons",
    "geckoViewAddons",
    "nativeMessaging",
    "nativeMessagingFromContent",
    "storage",
    "tabs",
    "webNavigation",
    "<all_urls>"
  ]
}
